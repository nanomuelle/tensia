{
  "name": "tensia",
  "version": "1.0.0",
  "description": "Aplicación personal de registro y consulta de mediciones de tensión arterial",
  "type": "module",
  "scripts": {
    "start": "SERVE_STATIC=true OPEN_BROWSER=true node apps/backend/src/index.js",
    "dev": "SERVE_STATIC=true OPEN_BROWSER=true nodemon apps/backend/src/index.js",
    "build": "node scripts/build.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:e2e": "playwright test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nanomuelle/tensia.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nanomuelle/tensia/issues"
  },
  "homepage": "https://github.com/nanomuelle/tensia#readme",
  "dependencies": {
    "dotenv": "^17.3.1",
    "express": "^4.22.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {},
    "collectCoverageFrom": [
      "apps/backend/src/**/*.js",
      "!apps/backend/src/index.js",
      "apps/frontend/src/validators.js",
      "apps/frontend/src/api.js",
      "apps/frontend/src/infra/localStorageAdapter.js",
      "apps/frontend/src/domain/measurement.js",
      "apps/frontend/src/services/measurementService.js"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 70
      }
    }
  }
}
